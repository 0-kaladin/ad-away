<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    android:padding="20dip"
    android:orientation="vertical">
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="?android:attr/listPreferredItemHeight"
        android:padding="6dip">
        <ImageView
            android:id="@+id/icon"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="6dip"
            android:src="@drawable/icon" />
        <TextView
            android:id="@+id/secondLine"
            android:layout_width="fill_parent"
            android:layout_height="26dip"
            android:layout_toRightOf="@id/icon"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:text="@string/app_subtitle" />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/icon"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_above="@id/secondLine"
            android:layout_alignWithParentIfMissing="true"
            android:textStyle="bold"
            android:textSize="20sp"
            android:gravity="center_vertical"
            android:text="@string/app_name" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:paddingTop="30dip">
        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:layout_width="fill_parent">
            <Button
                android:layout_height="wrap_content"
                android:id="@+id/apply_button"
                android:text="@string/button_apply"
                android:onClick="applyOnClick"
                android:layout_width="fill_parent"></Button>
            <TextView
                android:text="@string/button_apply_text"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/button_apply_text"
                android:paddingLeft="5dip"
                android:paddingRight="5dip"
                android:paddingBottom="20dip"
                android:textSize="12sp"></TextView>
            <Button
                android:id="@+id/revert_button"
                android:layout_height="wrap_content"
                android:text="@string/button_revert"
                android:onClick="revertOnClick"
                android:layout_width="fill_parent"></Button>
            <TextView
                android:text="@string/button_revert_text"
                android:layout_height="wrap_content"
                android:paddingLeft="5dip"
                android:paddingRight="5dip"
                android:layout_width="wrap_content"
                android:id="@+id/button_revert_text"
                android:textSize="12sp"></TextView>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
